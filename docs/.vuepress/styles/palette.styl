.home
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  margin: 0 auto;
  padding-top: 0;
  max-width: 100%;
  box-sizing: border-box;
  .hero
    position: absolute;
    top: 50%;
    left 50%;
    transform: translate(-50%,-65%);
    img 
      max-height: 80px;
      max-width: 100%;
      display: block;
    h1 {
      opacity 0;
      line-height 10px;
    }
  .footer 
    position: absolute;
    bottom: 5px;
    left: 0;
    right: 0;
    margin: 0 auto;

.page
  padding-left: 0;
  .content:not(.custom) 
    max-width: 800px;
    margin-left: 0;
  p 
   text-align: justify

.sidebar
  width: 16rem;
.page-edit, .page-nav
  max-width: 800px;
  margin-left: 0;